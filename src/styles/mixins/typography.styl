calc-rem($val, $base = 16pt)
    unit($val / $base, rem)

typo-base-font($useBaseFont = true)
    if $useBaseFont
        font-family: $base-font;

typo-display-4($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(112px)
    font-weight: 300
    line-height: 1
    letter-spacing: -0.04em

    if $colorContrast 
        opacity: 0.54

typo-display-3($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(56px)
    font-weight: 400
    line-height: 1.35
    letter-spacing: -0.02em

    if $colorContrast
        opacity: 0.54
    
typo-display-2($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(45px)
    font-weight: 400
    line-height: calc-rem(48px)

    if $colorContrast 
        opacity: 0.54
    
typo-display-1($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(34px)
    font-weight: 400
    line-height: calc-rem(40px)

    if $colorContrast 
        opacity: 0.54
    
typo-headline($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(24px)
    font-weight: 400
    line-height: calc-rem(32px)
    -moz-osx-font-smoothing: grayscale

    if $colorContrast 
        opacity: 0.87
    
typo-title($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(20px)
    font-weight: 500
    line-height: 1
    letter-spacing: 0.02em

    if $colorContrast 
        opacity: 0.87
    
typo-subhead($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(16px)
    font-weight: 400
    line-height: calc-rem(24px)
    letter-spacing: 0.04em

    if $colorContrast 
        opacity: 0.87
    
typo-subhead-2($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(16px)
    font-weight: 400
    line-height: calc-rem(28px)
    letter-spacing: 0.04em

    if $colorContrast 
        opacity: 0.87
    
typo-body-2($colorContrast = false, $useBaseFont = false) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(14px)

    if $useBaseFont 
        font-weight: 500
    else 
        font-weight: bold
    
    line-height: calc-rem(24px)
    letter-spacing: 0

    if $colorContrast 
        opacity: 0.87
    
typo-body-1($colorContrast = false, $useBaseFont = false) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(14px)
    font-weight: 400
    line-height: calc-rem(24px)
    letter-spacing: 0

    if $colorContrast 
        opacity: 0.87
    
typo-caption($colorContrast = false, $useBaseFont = false) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(12px)
    font-weight: 400
    line-height: 1
    letter-spacing: 0

    if $colorContrast 
        opacity: 0.54

typo-blockquote($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    position: relative
    font-size: calc-rem(24px)
    font-weight: 300
    font-style: italic
    line-height: 1.35
    letter-spacing: 0.08em

    &:before 
        position: absolute
        left: -0.5em
        content: '“'

    &:after 
        content: '”'
        margin-left: -0.05em
    
    if $colorContrast 
        opacity: 0.54

typo-menu($colorContrast = false, $useBaseFont = true) 
    typo-base-font($useBaseFont)

    font-size: calc-rem(14px)
    font-weight: 500
    line-height: 1
    letter-spacing: 0

    if $colorContrast 
        opacity: 0.87

typo-button($colorContrast = false, $useBaseFont = true)
    typo-base-font($useBaseFont)

    text-decoration: none
    font-size: .9em
    font-weight: bold
    text-transform: uppercase
    line-height: 1
    letter-spacing: 0
    text-align center
    white-space nowrap

    if $colorContrast
        opacity: 0.87
