.ms-dialog
    ms-elevation(24)
    z-index: 999
    border-radius: .15em
    margin: 1.5rem 2.5rem
    overflow-y: auto
    pointer-events: auto
    transition: all .3s $transition.primary;

    &__content
        align-items: center
        display: flex
        height: 100%
        justify-content: center
        left: 0
        pointer-events: none
        position: fixed
        top: 0
        transition: .3s $transition.primary;
        width: 100%
        z-index 5

    & > .ms-card
        margin: 0 !important
  
    &:not(^[0]--fullscreen)
        max-width: 90%
        max-height: 90%
    
    &__container
        display: inline-block
        vertical-align: middle

    &--fullscreen
        margin 0
        width 100%
        height 100%
        position fixed
        overflow-y: auto
        top: 0
        left 0

        > .ms-card
            min-height 100%
            min-width 100%
            margin 0 !important
            padding 0 !important
            
    &--scrollable
        overflow: hidden
        
        .ms-card__text
            overflow-y: auto
